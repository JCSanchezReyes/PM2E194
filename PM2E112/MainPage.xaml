<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2E112.MainPage">

    <StackLayout>
  
        
        <!--FOTO-->
        <Image x:Name="fotoSitio" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="Gray"    Margin="5,0,5,5"/>
        <Button Text="Tomar Foto" x:Name="btnFoto" Clicked="btnFoto_Clicked"/>
        <!--DATOS-->
        <Label Text="Latitud"/>
        <Entry x:Name="txtLat" IsReadOnly="true" TextTransform="None"/>
        <Label Text="Longitud"/>
        <Entry x:Name="txtLon" IsReadOnly="true" TextTransform="None"/>
        <Label Text="Descripcion"/>
        <Entry x:Name="txtDescripcion"/>
        <!--BONOTES-->
        <Button Text="Agregar" x:Name="btnAdd" Clicked="btnAdd_Clicked"/>
        <Button Text="Listar Sitios" x:Name="btnList" Clicked="btnList_Clicked"/>
        <Button Text="Salir" x:Name="btnSalir" Clicked="btnSalir_Clicked"/>
    </StackLayout>

</ContentPage>
